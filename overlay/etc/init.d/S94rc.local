#!/bin/sh

start() {
	echo -n "Starting rc.local: "
	/etc/rc.local
	status=$?
	if [ "$status" -eq 0 ]; then
		echo "OK"
	else
		echo "FAIL"
	fi
	return "$status"
}

stop() {
	echo -n "Stopping rc.local: "
	if [ -x /etc/rc.local.stop ]; then
		/etc/rc.local.stop
		echo "OK"
	else
		echo "/etc/rc.local.stop not found."
	fi
}

case "$1" in
	start | stop)
		$1
		;;
	restart | reload)
		stop
		sleep 1
		start
		;;
	*)
		echo "Usage: $0 {start|stop|restart|reload}"
		exit 1
		;;
esac

exit $?
